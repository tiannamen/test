{
  "openapi": "3.0.0",
  "info": {
    "title": "Account API",
    "version": "1.0.0",
    "description": "API for managing account aliases"
  },
  "servers": [
    {
      "url": "https://api.examplebank.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/alias": {
      "post": {
        "summary": "Create an account alias",
        "description": "Allows users to register an alias for their bank account",
        "requestBody": {
          "description": "Alias information",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["email", "phone", "random"]
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": ["type", "value"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Alias created successfully"
          },
          "400": {
            "description": "Invalid request body"
          },
          "401": {
            "description": "Unauthorized access"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "get": {
        "summary": "Retrieve account alias",
        "description": "Retrieve the registered alias for the account",
        "parameters" : [
          {
            "name": "type",
            "in": "query",
            "description": "returns all elements for given type",
            "required": false,
            "schema": {
              "type": string,
              "required": ["type"]
            },
            
          }
        ],
        "responses": {
          "200": {
            "description": "Alias retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["email", "phone", "random"]
                    },
                    "value": {
                      "type": "string"
                    }
                  },
                  "required": ["type", "value"]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized access"
          },
          "404": {
            "description": "Alias not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "summary": "Delete account alias",
        "description": "Delete the registered alias for the account",
        "parameters": [{
            "name": "value",
            "in": "query",
            "description": "Deletes a given value",
            "required": false,
            "schema": {
              "type": string,
              "required": ["value"]
            }
          }],
        "responses": {
          "204": {
            "description": "Alias deleted successfully"
          },
          "401": {
            "description": "Unauthorized access"
          },
          "404": {
            "description": "Alias not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
